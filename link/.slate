# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# From http://thume.ca/howto/2012/11/19/using-slate/
# Don't show app icons and show background apps, spreads icons in the same place.
config windowHintsDuration 30
config windowHintsTopLeftX (windowSizeX/3)-(windowHintsWidth/3);1
config windowHintsShowIcons true
config windowHintsIconAlpha .6
config windowHintsFontColor 255;125;125;1.0
config windowHintsBackgroundColor 50;53;58;0.6
config windowHintsWidth 50
config windowHintsHeight 50
config windowHintsRoundedCornerSize 0
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

config switchIconPadding 50

# Window hints
bind e:cmd hint ASDFGHJKLQWERTYUIOPCVBN

# Window grids
bind g:cmd grid padding:5 0:6,6 1:6,6

# Push Bindings
bind right:ctrl;alt  push right bar-resize:screenSizeX/2
bind left:ctrl;alt   push left  bar-resize:screenSizeX/2
bind up:ctrl;alt     push up    bar-resize:screenSizeY/2
bind down:ctrl;alt   push down  bar-resize:screenSizeY/2

# Nudge Bindings
#bind right:shift;alt nudge +10% +0
#bind left:shift;alt  nudge -10% +0
#bind up:shift;alt    nudge +0   -10%
#bind down:shift;alt  nudge +0   +10%

# Throw Bindings
bind 1:ctrl;alt         throw 0 resize
bind 2:ctrl;alt         throw 1 resize
bind 3:ctrl;alt         throw 2 resize
bind right:ctrl;alt;cmd throw right resize
bind left:ctrl;alt;cmd  throw left  resize
bind up:ctrl;alt;cmd    throw up    resize
bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
#bind right:cmd    focus right
#bind left:cmd     focus left
#bind up:cmd       focus up
#bind down:cmd     focus down
#bind up:cmd;alt   focus behind
#bind down:cmd;alt focus behind

# Window Hints
bind esc:cmd hint
