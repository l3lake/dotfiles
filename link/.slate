config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

#
# My Configs
#

# From http://thume.ca/howto/2012/11/19/using-slate/
config windowHintsDuration 30
config windowHintsShowIcons true
config windowHintsIconAlpha .4
config windowHintsFontColor 240;240;240;1.0
config windowHintsFontSize 50
config windowHintsBackgroundColor 50;53;58;1
config windowHintsWidth 90
config windowHintsHeight 90
config windowHintsRoundedCornerSize 6
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config switchIconPadding 50

# Window hints
bind e:cmd hint ASDFGHJKLQWERTYUIOPCVBN

# Window grids
bind g:cmd grid padding:5 0:6,6 1:6,6

# Push Bindings
bind l:ctrl;alt      push right bar-resize:screenSizeX/2      # Right Half  = ctrl+alt+l
bind h:ctrl;alt      push left  bar-resize:screenSizeX/2      # Left  Half  = ctrl+alt+h
bind right:ctrl;alt  push right bar-resize:screenSizeX/2      # Right Half  = ctrl+alt+right
bind left:ctrl;alt   push left  bar-resize:screenSizeX/2      # Left  Half  = ctrl+alt+left
bind k:ctrl;alt      push right bar-resize:screenSizeX*0.6    # Right 60%   = ctrl+alt+k
bind j:ctrl;alt      push left  bar-resize:screenSizeX*0.6    # Left  60%   = ctrl+alt+j

# Focus
bind 1:cmd        focus 'Google Chrome'   # Focus Google Chrome = cmd+1
bind 2:cmd        focus 'iTerm'           # Focus iTerm         = cmd+2
bind 3:cmd        focus 'Atom'            # Focus Atom          = cmd+3
bind 0:cmd        focus right             # Focus right         = cmd+0
bind 9:cmd        focus left              # Focus left          = cmd+9
bind right:cmd    focus right             # Focus right         = cmd+right
bind left:cmd     focus left              # Focus left          = cmd+left

# Throw Bindings
bind ,:ctrl;alt   throw 0 resize

# Relaunch
bind f12:ctrl;cmd;alt relaunch

# Undo
bind /:ctrl;cmd;alt undo

