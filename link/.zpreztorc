# Create directory and move into it
mcd () {
    mkdir -p $1
    cd $1
}

# Docker
function dockeruseradd () {
  sudo groupadd docker
  sudo gpasswd -a $1 docker
  sudo docker restart
  echo ""
  echo "" Done. $1 added to docker.
  echo ""
}

